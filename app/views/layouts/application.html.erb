  <body>
         <!-- New start-->
         <div class="page-wrap">
            <nav>
              <div class="nav-wrapper container d-flex justify-content-between align-items-center">
                <a id="logo-container" href="#" class="brand-logo"><img src="img/Trauminselreisen-Logo-transparent.png"></a>
                <ul class="nav-list">
                  <li class="nav-help" data-toggle="modal" data-target="#helpModal">Help</li>
                  <li class="nav-sort">
                  
                        <select class="nav-sort-select" onchange="window.location.href=this.options[this.selectedIndex].value">
                            <option selected disabled>Sort by date</option>
                            <option  VALUE="?q[hotel_types_year_eq]=2019" >2019</option>
                    
                    </select>
                  </li>
                  <li class="nav-contact"><a href="#">Contact us</a></li>
                </ul>
              </div>
            </nav>
            <!-- New end -->
    <main>
      <div class="container">
          <%= yield %>
        </div>
        
      </main>

              <!-- Modal -->
              <div class="modal fade" id="helpModal" tabindex="-1" role="dialog" aria-hidden="true">
